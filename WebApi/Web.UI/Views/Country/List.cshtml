@model List<CountryDtoModel>

@{
    if (Model.Count>0)
    {
        <div class="text-end">
        <a asp-action="Create" asp-controller="Country">Create</a>
        </div>
        <table class="table">
        <thead>
         <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
         </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
                {
                    <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                    <a asp-action="Delete" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    <a asp-action="Update" asp-controller="Country" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                    </tr>
                }
        </tbody>
        </table>
    }else
    {
        <div class="text-danger">
        Her hansi bir data tapilmadi.
        </div>
    }

}