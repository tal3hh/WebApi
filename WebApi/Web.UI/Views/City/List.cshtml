@model List<CityDtoModel>
@{
    string Population = string.Empty;
}

@{
    if (Model.Count>0)
    {
        <div class="text-end">
        <a asp-action="Create" asp-controller="City">Create</a>
        </div>
        <table class="table">
        <thead>
         <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Population</td>
            <td>CountryId</td>
            <td></td>
         </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
                {
                    if(item.Population > 1000000)
                    {
                        item.Population = (item.Population / 1000000);
                        Population = item.Population + " milyon";
                    }
                    <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Population</td>
                    <td>@item.CountryId</td>
                    <td>
                    <a asp-action="Delete" asp-controller="City" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    <a asp-action="Update" asp-controller="City" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                    </tr>
                }
        </tbody>
        </table>
    }else
    {
        <div class="text-danger">
        Her hansi bir data tapilmadi.
        </div>
    }

}